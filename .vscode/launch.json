    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build Package",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "build"
            ],
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        }
    ]
}